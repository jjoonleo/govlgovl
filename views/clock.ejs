      <img class="nodejs" src="../public/image/nodejs.png" alt="">
      <img class="mysql" src="../public/image/mysql.png" alt="">
      <img class="react" src="../public/image/react.png" alt="">
      <img class="arduino" src="../public/image/arduino.png" alt="">

    </div>
  </div>
  
<script type="text/javascript">
          const deg = 6;
          const hr = document.querySelector("#hr");
          const mn = document.querySelector("#mn");
          const sc = document.querySelector("#sc");
          const clock = document.querySelector(".clock");
          const clock_sec = document.querySelector(".clock .sec");
          const clock_sec_sc = document.querySelector(".clock .sec .sc");
          const clock_min = document.querySelector(".clock .min");
          const clock_min_mn = document.querySelector(".clock .min .mn");
          const clock_hour = document.querySelector(".clock .hour");
          const clock_hour_hr = document.querySelector(".clock .hour .hr");
          const clock_img = document.querySelector(".clock_img");
          const clock_dot_img = document.querySelector(".clock_dot_img");
          
          function setDivHeight()
          {
            clock.style.height = clock.offsetWidth +"px";
            clock_sec.style.height = clock.offsetWidth +"px";
            clock_sec.style.width = clock.offsetWidth +"px";
            clock_sec_sc.style.width = clock.offsetWidth*80/100 +"px";
            clock_sec_sc.style.height = clock.offsetWidth*80/100 +"px";
            clock_sec_sc.style.margin = clock.offsetWidth*10/100 + "px";
            clock_min.style.height = clock.offsetWidth +"px";
            clock_min.style.width = clock.offsetWidth +"px";
            clock_min_mn.style.width = clock.offsetWidth*70/100 +"px";
            clock_min_mn.style.height = clock.offsetWidth*70/100 +"px";
            clock_min_mn.style.margin = clock.offsetWidth*15/100 + "px";
            clock_hour.style.height = clock.offsetWidth +"px";
            clock_hour.style.width = clock.offsetWidth +"px";
            clock_hour_hr.style.width = clock.offsetWidth*50/100 +"px";
            clock_hour_hr.style.height = clock.offsetWidth*50/100 +"px";
            clock_hour_hr.style.margin = clock.offsetWidth*25/100 + "px";
            
            clock_img.style.height = clock.offsetWidth +"px";
            clock_dot_img.style.height = clock.offsetWidth + "px";
          }

    
          setInterval(() => {
            let day = new Date();
            let hh = day.getHours() * 30;
            let mm = day.getMinutes() * deg;
            let ss = day.getSeconds() * deg;
    
            hr.style.transform = `rotateZ(${hh + mm / 12}deg)`;
            mn.style.transform = `rotateZ(${mm}deg)`;
            sc.style.transform = `rotateZ(${ss}deg)`;

            setDivHeight();
          });
</script>
</body>
</html>